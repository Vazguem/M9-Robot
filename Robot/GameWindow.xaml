<Window x:Class="Robot.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robot"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>



        <Canvas x:Name="canvas" Grid.Row="1"/>
        <Button x:Name="btnIniciaJocs" Grid.Row="2" Content="Inicia Joc" Click="btnIniciaJoc" />


        <StackPanel Orientation="Vertical"  >
            <TextBlock FontSize="20" Margin="0,0,-0.957,0"><Run Text="Orientacion :"/></TextBlock>
            <TextBlock x:Name="robotMoviment" FontSize="20" Background="Red" Padding="2" VerticalAlignment="Top"/>
        </StackPanel>


    </Grid>
</Window>
